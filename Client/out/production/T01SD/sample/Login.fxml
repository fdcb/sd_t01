<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.scene.*?>
<?import javafx.scene.control.*?>
<?import javafx.scene.layout.*?>

<Pane maxHeight="-Infinity" maxWidth="-Infinity" minHeight="-Infinity"
      minWidth="-Infinity" prefHeight="175.0" prefWidth="250.0"
      xmlns="http://javafx.com/javafx/8" xmlns:fx="http://javafx.com/fxml/1"
      fx:controller="sample.LoginController">
   <children>
      <Button fx:id="cancelButton" cancelButton="true" layoutX="20.0"
              layoutY="113.0" mnemonicParsing="false" prefHeight="25.0"
              prefWidth="98.0" text="Cancel">
         <cursor>
            <Cursor fx:constant="HAND" />
         </cursor></Button>
      <Button fx:id="confirmButton" defaultButton="true" layoutX="139.0"
              layoutY="113.0" mnemonicParsing="false" prefHeight="25.0"
              prefWidth="98.0" text="Confirm">
         <cursor>
            <Cursor fx:constant="HAND" />
         </cursor></Button>
      <TextField fx:id="usernameTF" layoutX="86.0" layoutY="30.0" />
      <Label layoutX="20.0" layoutY="34.0" prefHeight="17.0" prefWidth="61.0"
             text="Username: " />
      <Label layoutX="24.0" layoutY="73.0" text="Password:" />
      <PasswordField fx:id="passwordF" layoutX="86.0" layoutY="69.0" />
      <Label fx:id="guestUserL" layoutX="31.0" layoutY="145.0"
             text="Enter as Guest" textFill="#0087ff" underline="true">
         <cursor>
            <Cursor fx:constant="HAND" />
         </cursor></Label>
      <Label fx:id="registerL" layoutX="166.0" layoutY="145.0"
             text="Register" textFill="#0087ff" underline="true">
         <cursor>
            <Cursor fx:constant="HAND" />
         </cursor>
      </Label>
      <Label fx:id="warningErrorL" layoutX="19.0" layoutY="6.0"
             text="Your password or username is incorrect!"
             textAlignment="CENTER" textFill="#f50000" />
   </children>
</Pane>
